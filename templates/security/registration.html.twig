{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription sur le site</h1>

    {# J'ouvre la balise form de mon formulaire #}
    {{ form_start(form) }}
    {# Si je veux afficher des placeholders pour chaque input, on utilisera pas le form_widget, mais le form_row de la façon suivante : #}
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
    {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Répétez le mot de passe'}}) }}
    {# Avant la fermeture du form, on ajoute le bouton #}
    <button type="submit" class="btn btn-success">Inscription</button>
    {# Je ferme la balise du form #}
    {{ form_end(form) }}


{% endblock %}
